<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.linxinzhe.android.xinzhesecurity.LostFoundActivity">

    <TextView
        style="@style/SetupTitle"
        android:gravity="left"
        android:text="防盗状态：" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            style="@style/TextContent"
            android:text="安全号码" />

        <TextView
            android:id="@+id/tv_safenumber"
            style="@style/TextContent"
            android:layout_alignParentRight="true"
            android:text="xxxx" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            style="@style/TextContent"
            android:text="锁屏密码" />

        <TextView
            android:id="@+id/tv_lockpsw"
            style="@style/TextContent"
            android:layout_alignParentRight="true"
            android:text="xxxx" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="10dp"
        android:background="#44000000" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextContent"
            android:text="防盗保护是否开启" />

        <CheckBox
            android:id="@+id/cb_protecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="10dp"
        android:background="#44000000" />

    <Button
        style="@style/TextContent"
        android:layout_width="match_parent"
        android:onClick="reEnterSetup"
        android:text="重新进入设置向导" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="10dp"
        android:background="#44000000" />

    <TextView
        style="@style/TextContent"
        android:layout_width="match_parent"
        android:background="#66000000"
        android:text="短信命令" />

    <TextView
        style="@style/TextContent"
        android:drawableLeft="@mipmap/ic_sms_black_18dp"
        android:text="GPS定位:dingwei*#" />

    <TextView
        style="@style/TextContent"
        android:drawableLeft="@mipmap/ic_sms_black_18dp"
        android:text="警报声音：jingbao*#" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextContent"
            android:drawableLeft="@mipmap/ic_sms_black_18dp"
            android:text="锁死屏幕:suoding*#" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认9999" />
    </LinearLayout>

    <TextView
        style="@style/TextContent"
        android:drawableLeft="@mipmap/ic_sms_black_18dp"
        android:text="数据销毁:shanchu*#" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testLock"
            android:text="测试是锁屏" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="若没开启则会调用激活界面，若开启了则无反应" />
    </LinearLayout>


</LinearLayout>
