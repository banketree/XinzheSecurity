<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.linxinzhe.android.xinzhesecurity.setup.Setup1LostFoundActivity">

    <TextView
        style="@style/SetupTitle"
        android:text="1.欢迎使用防盗功能" />

    <TextView
        style="@style/TextContent"
        android:text="您的防盗卫士提供以下功能：" />

    <TextView
        android:layout_marginTop="0dp"
        style="@style/TextContent"
        android:text="SIM卡变更提示"
        android:drawableLeft="@mipmap/ic_check_black_18dp"
        android:layout_height="30dp" />

    <TextView
        style="@style/ExplainContent"
        android:text="SIM卡变更后，会发送短信给您设置的安全号码，从而该手机的新号码"/>

    <TextView
        android:layout_marginTop="0dp"
        style="@style/TextContent"
        android:text="GPS定位"
        android:drawableLeft="@mipmap/ic_check_black_18dp"
        android:layout_height="30dp" />
    <TextView
        style="@style/ExplainContent"
        android:text="通过安全号码发送短信命令，获知该手机所在位置"/>

    <TextView
        android:layout_marginTop="0dp"
        style="@style/TextContent"
        android:text="手机警报"
        android:drawableLeft="@mipmap/ic_check_black_18dp"
        android:layout_height="30dp" />
    <TextView
        style="@style/ExplainContent"
        android:text="发送命令使手机警报，辨别该手机具体位置"/>

    <TextView
        android:layout_marginTop="0dp"
        style="@style/TextContent"
        android:text="远程锁屏"
        android:drawableLeft="@mipmap/ic_check_black_18dp"
        android:layout_height="30dp" />
    <TextView
        style="@style/ExplainContent"
        android:text="发送命令锁死屏幕"/>

    <TextView
        android:layout_marginTop="0dp"
        style="@style/TextContent"
        android:text="远程数据销毁"
        android:drawableLeft="@mipmap/ic_check_black_18dp"
        android:layout_height="30dp" />
    <TextView
        style="@style/ExplainContent"
        android:text="发送命令消除手机上所有信息"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/TextContent"
            android:text="请向左滑动继续设置" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
